    <div class="card border-secondary bg-light mx-auto" style="width: 15rem;">
  <div class='card-body'>
    <%= form_for @job do |f| %>
    <div>
      <% if @job.errors.any? %>
      <% @job.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
      <% end %>
      <% end %>
    </div>

    <%= f.number_field :job_number, placeholder: "Job Number", class: 'form-control' %><br />

    <%= f.text_field :job_name, row: 10, placeholder: "Job Name", class: 'form-control' %><br />

    <%= f.submit "Submit", class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
