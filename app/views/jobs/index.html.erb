<h1>Jobs Index</h1>
<%= link_to "New Job", new_job_path%>


<table class="table table-bordered">
  <tr>
    <th>id</th>
    <th>Number</th>
    <th>Name</th>
    <th>Status</th>
    <th>Toggle Status</th>
    <th>Edit</th>
    <th>Reports</th>
    <th>Delete</th>

  </tr>
<% @jobs.each do |job| %>
  <tr>
    <td><%= job.id%></td>
    <td><%= job.job_number%></td>
    <td><%= job.job_name%></td>
    <td><%= job.status%></td>
    <td><%= link_to "Toggle Status", toggle_status_job_path(job) %></td>
    <td><%= link_to "Edit", edit_job_path(job) %></td>
      <td><%= link_to "Generate Report", new_jobs_csv_path, {:controller => "job_csv", :action => "new", :job => {:job_id => job.id}} %></td>
    <td><%= link_to "Delete", job, method: :delete, data:  {confirm: "Are you sure you want to delete?"} %></td>
  </tr>
<% end %>
</table>
