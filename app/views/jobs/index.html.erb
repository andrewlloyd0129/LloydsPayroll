<h1>Jobs</h1>
<%= link_to "New Job", new_job_path%>


<table class="table table-bordered">
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Status</th>
    <th>Edit</th>
    <th>Toggle Status</th>
    <th>Reports</th>

  </tr>
<% @jobs.each do |job| %>
  <tr>
    <td><%= job.job_number%></td>
    <td><%= job.job_name%></td>
    <td><%= job.status%></td>
    <td><%= link_to "Edit", edit_job_path(job) %></td>
    <td><%= link_to "Toggle Status", toggle_status_job_path(job) %></td>
    <td><%= link_to "Generate Report", jobs_csv_path(job, format: "csv") %></td
  </tr>
<% end %>
</table>
